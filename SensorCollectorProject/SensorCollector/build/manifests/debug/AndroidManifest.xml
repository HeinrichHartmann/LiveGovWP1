<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="eu.liveandgov.wp1.sensorcollector">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="eu.liveandgov.wp1.sensorcollector.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="eu.liveandgov.wp1.sensorcollector.RecordingService">
            <intent-filter>
                <action android:name="eu.liveandgov.intent.action.SAMPLING_ENABLE"/>
                <action android:name="eu.liveandgov.intent.action.SAMPLING_DISABLE"/>
            </intent-filter>
        </service>

    </application>

</manifest>
